<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true) do |form| %>
<div class="row">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control contact_name_input", placeholder: "Enter Name" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control contact_email_input", placeholder: "Enter Email" %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control contact_msg_body_txtarea", placeholder: "Enter Message", rows: 5 %>
  </div>
</div>
<br>
<%= form.submit "Send", class: "form_label btn btn-default" %>
<% end %>

<div class="contact-page-bottom-spacing"></div>

</div>
