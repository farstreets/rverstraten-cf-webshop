<h1>Sign up</h1>

<div class="content_width_wrapper">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <!-- Custom name-fields were enabled in 'application_controller.rb' -->
    <div class="field form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, required: true, class:"form-control form_single_line_input", placeholder:"first name" %>
    </div>

    <!-- Custom name-fields were enabled in 'application_controller.rb' -->
    <div class="field form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autofocus: true, required: true, class:"form-control form_single_line_input", placeholder:"last name" %>
    </div>

    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form_single_line_input",
      placeholder:"email" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control form_single_line_input",
      placeholder:"password" %>
    <!-- </div>

    <div class="field form-group"> -->
      <%= f.label :password_confirmation, hidden: true %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form_single_line_input",
      placeholder:"password confirmation" %>
    </div>

    <br>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-default" %>
    </div>

    <br>

  <% end %>

  <%= render "devise/shared/links" %>

  <br><br>

</div>
