<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>
  <p class="form-group">
    <%= f.label :body, "Comments" %>
    <%= f.text_area :body, class: "form-control" %>
  </p>

  <p>
    <div class="rating"></div>
  </p>

  <p>
    <%= f.submit "Submit", class: "btn btn-default" %>
  </p>
  <% end %>
<% end %>
