<div class="product-reviews">

  <% @comments.each do |comment| %>
    <div class="row">
      <hr>
      <p>
        <%= comment.user.first_name %>
        <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
        <% if (signed_in? && (current_user.admin? || (current_user.id == comment.user_id))) %>
          <%= link_to ('<span class="comment-delete glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(comment.product, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </p>

      </p>
      <!-- <p>< % = "Rating: #{comment.rating}/5" % ></p> -->
      <div class="rated" data-score="<%= comment.rating %>"></div>
      <p><%= comment.body %></p>
    </div>
  <% end %>

  <!-- Info about will_paginate: https://www.youtube.com/watch?v=MIf1ojX2AGY -->
  <%= will_paginate @comments %>

</div>
